{
  "name": "ra-ng-quickstart-webpack2",
  "version": "2.0.0",
  "description": "ra-ng project quickstart with Webpack2",
  "scripts": {
    "ngc":"ngc -p tsconfig.prod-aot.json",

    "build:dev": "rimraf dist && webpack --config config/webpack.dev.js --progress --profile",
    "build:prod": "rimraf dist && webpack --config config/webpack.prod.js  --progress --profile --bail",
    "build:prod:aot": "rimraf dist && webpack --config config/webpack.prod.js  --progress --profile --bail",
    "build": "npm run build:dev",

    "server:dev": "webpack-dev-server --config config/webpack.dev.js --progress --port 3000 --profile --watch --content-base src/",
    "server:prod": "http-server dist --cors",
    "server": "npm run server:dev",

    "start": "npm run server:dev",
    "test": "karma start karma.conf.js",
    "e2e": "protractor protractor.config.js",
    "tslint": "tslint -c tslint.json src/app/**/*.ts",

    "watch:dev": "npm run build:dev -- --watch",
    "watch:prod": "npm run build:prod -- --watch",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "watch": "npm run watch:dev",

    "webdriver-manager": "webdriver-manager",
    "webdriver:start": "npm run webdriver-manager start",
    "webdriver:update": "npm run webdriver-manager update",
    "webpack-dev-server": "webpack-dev-server",
    "webpack": "webpack"
  },
  "keywords": [
    "angular2",
    "ra-ng",
    "webpack2",
    "aot"
  ],
  "author": "ICT Analysis, Architecture & Design",
  "license": "Apache-2.0",
